<h1>Admin::Posts#index</h1>
<p>Find me in app/views/admin/posts/index.html.erb</p>

<table class="table table-hover table-inverse">
  <p>投稿一覧</p>
  <thead>
    <tr>
      <th>画像</th>
      <th>イベント名</th>
      <th>詳細</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
     <td><%= image_tag post.get_image(150,150) %></td>
      <td><%= link_to post.event_name, admin_post_path(post.id) %></td>
      <td><%= post.event_detail %></td>
      <td><%= link_to '編集', edit_admin_post_path(post.id), class:"btn btn-sm btn-success" %></td>
      <td><%= link_to "削除", admin_post_path(post.id), method: :delete, class:"btn btn-sm btn-danger" %></td>
      <td><%= link_to "#{post.comments.count} コメント", admin_post_path(post.id) %></td>
      <td>
        <% post.tags.each do |list|%>
          <span class="fas_char_backradius">
          <%=link_to list.tag_name,search_tag_path(tag_id: list.id) %>
          <%="(#{list.posts.count})" %>
          <% end %>
          </span>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>
