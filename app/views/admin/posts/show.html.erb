<h1>Admin::Posts#show</h1>
<h2>イベント詳細</h2>
<div>投稿ユーザー：<%= link_to @post.user.name, admin_user_path(@post.user.id) %></div>
  <div class="row justify-content-center">
    <%= @post.address %>
  </div>
  <div class="row justify-content-center">
    <%= image_tag @post.get_image(300,300) %>
  </div>
  <div class="row justify-content-center">
    <% @post.tags.each do |tag| %>
    <span class="fas_char_backradius"><%= tag.tag_name %></span>
      <% end %>
  </div>

  <div class="row justify-content-center mb-4">
    <div class="">イベント名</div>
    <div class=""><%= @post.event_name %></div>
  </div>

  <div class="row justify-content-center mb-4">
    <div class="">イベント説明</div>
    <div class=""><%= @post.event_detail %></div>
  </div>

  <div class="row justify-content-center mb-4">
    <%= link_to "削除", admin_post_path(@post.id), method: :delete, class:"btn btn-md btn-danger" %>
  </div>
</div>
  <p>コメント件数：<%= @post.comments.count %></p>
  <table class="table">
    <% @post.comments.each do |comment| %>
    <tbody>
      <tr>
        <td><%= image_tag comment.user.get_profile_image(100,100) %></p>
        <td><%= link_to comment.user.name, user_path(comment.user.id) %></td>
        <td><%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment %></td>
        <td><%= link_to "削除", admin_post_comment_path(comment.post, comment), method: :delete %></td>
      </tr>
    </tbody>
    <% end %>
  </table>

  <%= link_to "戻る", admin_posts_path, class:"btn btn-secondary" %>
