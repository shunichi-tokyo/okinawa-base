<h1>Admin::Users#edit</h1>

<%= form_with model: @user, url: admin_user_path(@user.id), method: :patch do |f| %>
        <div class="form-group">
          <div class="row">
            <label class="col-md-2 form-label">ユーザー名</label>
            <div class="col-md-10 mb-4">
              <%= f.text_field :name, autofocus: true, id:"inputname", placeholder:"ユーザー名"%>
            </div>
          </div>

          <div class="form-group">
          <div class="row">
            <label class="col-md-2 form-label">ユーザー画像</label>
            <div class="col-md-10 mb-4">
              <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
            </div>
          </div>

          <div class="row">
            <label class="col-md-2 form-label">メールアドレス</label>
            <div class="col-md-10 mb-4">
              <%= f.text_field :email, placeholder: "メール" %>
            </div>
          </div>

          <div class="row">
            <label class="col-md-2 form-label">自己紹介</label>
            <div class="col-md-10 mb-4">
              <%= f.text_area :introduction, placeholder:"自己紹介" %>
            </div>
          </div>

          <div class="row justify-content-center">
            <%= f.submit "変更を保存", class:'btn btn-lg btn-success' %>
          </div>
      <% end %>