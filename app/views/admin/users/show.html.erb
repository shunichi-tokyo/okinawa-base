<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="my-5"><%= @user.name %>さんの会員詳細</h4>
      <div class="d-flex align-items-center">
        <table class="table table-borderless">
          <tr>
            <th>会員ID</td>
            <td><%= @user.id %></td>
          </tr>

          <tr>
            <th>氏名</td>
            <td><%= @user.name %></td>
          </tr>

          <tr>
            <td>ユーザー画像</td>
            <td><%= image_tag @user.get_profile_image(100,100) %></td>
          </tr>

          <tr>
            <th>メールアドレス</th>
            <td><%= @user.email %></td>
          </tr>

          <tr>
            <th>自己紹介</th>
            <td><%= @user.introduction %></td>
          </tr>

          <tr>
            <th>会員ステータス</th>
            <th><%= @user.user_status %></th>
          </tr>

          <tr>
            <td></td>
            <td><%= link_to "編集する", edit_admin_user_path, class:"btn btn-success" %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
  <%= link_to "戻る", admin_users_path, class:"btn btn-secondary" %>
</div>