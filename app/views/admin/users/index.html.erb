<h1>Admin::Users#index</h1>
<p>Find me in app/views/admin/users/index.html.erb</p>


<div class="col-md-8 offset-md-1">
  <h2>会員一覧</h2>
  <table class="table">
    <thead>
      <tr>
        <th>会員ID</th>
        <th>ユーザー画像</th>
        <th>ユーザー名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= image_tag user.get_profile_image(100,100) %></td>
        <td><%= link_to user.name, admin_user_path(user.id) %></td>
        <td><%= user.email %></td>
        <td><%= user.user_status %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= paginate @users %>
</div>
</div>