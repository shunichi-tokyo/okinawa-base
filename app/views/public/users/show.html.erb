<h3>users#show</h3>

<h2>マイページ</h2>

<% if @user == current_user %>
  <div><%= link_to "編集", edit_user_path(@user.id), class:"btn btn-sm btn-success" %></div>
<% end %>
<div class="row justify-content-center">
    <%= link_to '投稿一覧', posts_path, class:"btn btn-sm btn-success" %>
  </div>

<div>
  <p>ユーザー名</p>
  <%= @user.name %>
</div>

<div>
  <%= image_tag @user.get_profile_image(100,100) %>
</div>

<div>
  <%= @user.email %>
</div>


<div>
  <p>自己紹介</p>
  <%= @user.introduction %>
</div>