<div><%= flash[:notice] %></div>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <p>編集</p>
      <% if @user.errors.any? %>
          <%= @user.errors.count %>件のエラーが発生しました
        <ul>
          <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <label for="inputName">名前</label>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>
        </div>
        <div class="form-group">
          <label for="inputImage">ProfileImage</label>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
        </div>
        <div class="form-group">
          <label for="email">メールアドレス</label>
          <%= f.text_field :email, placeholder: "メール", accept: "image/*" %>
        </div>
        <div class="form-group">
          <label for="inputIntroduction">Introduction</label>
          <%= f.text_area :introduction, placeholder:"自己紹介" %>
        </div>
        <%= f.submit "Update User" %>
      <% end %>
    </div>
  </div>
  <div>
    <%= link_to "退会する", check_path, class:"btn btn-sm btn-success" %>
  </div>
</div>