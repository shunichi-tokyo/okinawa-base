<h1>Public::Posts#edit</h1>
<p>Find me in app/views/public/posts/edit.html.erb</p>

<%= form_with model: @post do |f| %>
        <div class="form-group">
          <label for="inputName">イベント名</label>
          <%= f.text_field :event_name, placeholder:"名前" %>
        </div>
        <div class="form-group">
          <label for="inputImage">イベント画像</label>
          <%= f.file_field :image, placeholder: "イベント画像", accept: "image/*" %>
        </div>
        <div class="form-group">
          <label for="inputevent_detail">イベント詳細</label>
          <%= f.text_area :event_detail, placeholder:"イベント詳細" %>
        </div>
        <label>タグ(,で区切ると複数タグ登録できます)</label>
        <%= f.text_field :tag_name,value: @tags, class: 'form-control' %>
        
        <%= f.submit "更新" %>
      <% end %>
